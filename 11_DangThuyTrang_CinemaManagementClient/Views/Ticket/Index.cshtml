        function selectSeat(seatId, seatName, priceTicket, type) {
            console.log("seatId", seatId);
            console.log("seatName", seatName);
            console.log("priceTicket", priceTicket);
            console.log("type", type);
            var seatListTd = document.getElementById('seat-list');
            var priceTicketTd = document.getElementById('price-ticket');
            var totalPriceTd = document.getElementById('total-price');
            var seat = document.getElementById(seatId);

            var countSeatList = seatListTd.textContent.trim().split(",");
            var currentValueSeatList = seatListTd.textContent.trim();
            var currentPriceTicket = priceTicketTd.textContent.trim();
            var currentTotalTicket = totalPriceTd.textContent.trim();
            //+ seatName into value of current seat list
            if ((seat.getAttribute("name") == 1) && !currentValueSeatList.includes(seatName)) {
                countSeatList.push(seatName);
                currentValueSeatList = countSeatList.join(",");
                // currentValueSeatList += (countSeatList.length > 0 ? "," : " ") + seatName;
            }

            if (seat.getAttribute("name") == -1) {
                var index = countSeatList.indexOf(seatName);
                countSeatList.splice(index, 1);
                currentValueSeatList = countSeatList.join(",");
            }

            //assign that value into content of tag td has id = seat-list
            seatListTd.textContent = currentValueSeatList;

            //set value for price-ticket tag
            if (type == "vip") {
                priceTicket = priceTicket + 25000;
            }

            //calculate totalPrice = price-ticket * number of seat
            var totalPrice = priceTicket * (countSeatList.length - 1);

            if (countSeatList.length - 1 == 0) {
                priceTicketTd.textContent = "";
                totalPriceTd.textContent = "";
            }
            else {
                priceTicketTd.textContent = priceTicket;
                //set value for total-price tag
                totalPriceTd.textContent = totalPrice.toString();
            }
            //reset color and value of name
            if (seat.getAttribute("name") == 1) {
                // seat.setAttribute("background-color", "#b11500")
                seat.style.backgroundColor = "#b11500";
                seat.setAttribute("name", -1);
            }
            else if (seat.getAttribute("name") == -1) {
                // seat.setAttribute("background-color", "white")
                seat.style.backgroundColor = "";
                seat.setAttribute("name", 1);
            }
        }
