            inputShowRoomSeatIds.type = 'hidden';
            inputShowRoomSeatIds.name = 'showRoomSeatIds';
            inputShowRoomSeatIds.value = showRoomSeatIds.join(',');
            form.appendChild(inputShowRoomSeatIds);

            var inputTotalPrice = document.createElement('input');
            inputTotalPrice.type = 'hidden';
            inputTotalPrice.name = 'totalPrice';
            inputTotalPrice.value = totalPrice;
            form.appendChild(inputTotalPrice);

            var inputShowRoomId = document.createElement('input');
            inputShowRoomId.type = 'hidden';
            inputShowRoomId.name = 'showRoomId';
            inputShowRoomId.value = showRoomId;
            form.appendChild(inputShowRoomId);
            // Thêm form vào body của trang và tự động submit form
            document.body.appendChild(form);
            form.submit();
        }
    </script>
