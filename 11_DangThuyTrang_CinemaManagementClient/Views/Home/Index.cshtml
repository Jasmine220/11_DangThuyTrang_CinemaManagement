@model IEnumerable<_11_DangThuyTrang_BussinessObjects.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}
<style>
    body {
        background-image: url('/img/pngtree-background-white-gray-gradient-business-vector-picture-image_1996067.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .pagination-container {
        text-align: center;
        margin-top: 20px; /* Điều chỉnh khoảng cách phía trên thanh phân trang */
    }

    .pagination {
        display: inline-block;
    }

    .page-link {
        display: inline-block;
        padding: 5px 10px;
        margin-right: 5px;
        border: 1px solid #ccc;
        text-decoration: none;
        color: #333;
    }

        .page-link.active {
            background-color: #007bff;
            color: #fff;
        }

</style>
<h1>Movies</h1>

<div class="search-container">
    <form method="get" action="@Url.Action("Index")">
        <label for="keyword">Title: </label>
        <input type="text" name="keyword" value="@ViewBag.Keyword" />
        <button class="btn btn-danger" type="submit">Search</button>
        <label for="genreId">Genre: </label>
        <select name="genreId" id="genreId">
            <option value="">-- All --</option>
            @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre.Id">@genre.Name</option>
            }
        </select>
    </form>
</div>
<div class="movie-grid">
    @foreach (var movie in Model)
    {
        <div class="movie-item">
            <div class="image-container">
                <a href="@Url.Action("MovieDetail", "Home", new { id = movie.Id })">
                    <img src="@movie.Image" alt="@movie.Title" class="movie-image" />
                </a>
                <div class="buttons">
                    <a href="@Url.Action("MovieDetail", "Home", new { id = movie.Id })" class="btn btn-danger detail-btn">Xem chi tiết</a>
                    <button class="btn btn-danger book-ticket-btn">Đặt vé</button>
                </div>


            </div>
            <div class="movie-info">
                <h4 style="text-align: center;">@movie.Title</h4>
                <p>Thể loại: @movie.Genre.Name</p>
                <p>Thời lượng: @movie.Length phút</p>
                <p>Khởi chiếu: @movie.PurchaseTime?.ToString("dd-MM-yyyy")</p>
            </div>
        </div>
    }
</div>
@if (ViewBag.TotalPages > 1)
{
    <div class="pagination-container">
        @if (ViewBag.TotalPages > 1)
        {
            <div class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="@Url.Action("Index", new { page = i })" class="page-link @(ViewBag.PageNumber == i ? "active" : "")">@i</a>
                }
            </div>
        }
    </div>

}


<style>
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px); /* Gán cứng kích thước là 200px */
        grid-gap: 20px;
    }

    .movie-item {
        border: 1px solid #ccc;
        padding: 10px;
    }

    .movie-image {
        width: 100%;
        height: 400px;
        max-width: 100%;
        max-height: 400px;
        object-fit: cover;
    }

    .movie-info {
        margin-top: 10px;
    }

        .movie-info h2 {
            margin-bottom: 5px;
        }

    .pagination {
        margin-top: 20px;
    }

    .page-link {
        display: inline-block;
        padding: 5px 10px;
        margin-right: 5px;
        border: 1px solid #ccc;
        text-decoration: none;
        color: #333;
    }

    .book-ticket-btn,
    .detail-btn {
        background-color: red;
        color: white;
        border: none;
        padding: 8px 16px;
        margin: 0 5px;
        border-radius: 4px;
        cursor: pointer;
    }

    .detail-btn {
        text-decoration: none;
    }

    .page-link.active {
        background-color: #007bff;
        color: #fff;
    }

    .buttons {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .buttons a,
        .buttons button {
            margin: 0 5px;
        }
</style>
<style>
    .buttons {
        display: none;
        text-align: center;
        margin-top: 10px;
    }
</style>

<style>
    .image-container {
        position: relative;
        overflow: hidden;
    }

    .buttons {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        display: none;
        text-align: center;
    }

    .movie-item:hover .buttons {
        display: block;
    }
</style>
<script>
    function formatDate(date) {
        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear().toString().slice(2);

        // Đảm bảo các số nhỏ hơn 10 được thêm số 0 phía trước
        if (day < 10) {
            day = "0" + day;
        }
        if (month < 10) {
            month = "0" + month;
        }

        return day + "/" + month + "/" + year;
    }

    var bookTicketBtns = document.querySelectorAll('.book-ticket-btn');

    bookTicketBtns.forEach(function (btn) {
        btn.addEventListener('click', function () {
            // Lấy ngày hiện tại
            var currentDate = formatDate(new Date());
            // Chuyển hướng đến trang Index của ShowTimeController và truyền tham số ngày hiện tại
            window.location.href = "/ShowTime/Index?date=" + currentDate;
        });
    });
</script>

