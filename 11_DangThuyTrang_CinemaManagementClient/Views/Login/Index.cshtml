@model _11_DangThuyTrang_BussinessObjects.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<style>
    body {
        background-image: url('/img/pngtree-background-white-gray-gradient-business-vector-picture-image_1996067.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    /* Custom CSS for centering the card */
    .centered {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
</style>
<div class="container-fluid p-0">
    <div class="row centered">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form asp-controller="Login" asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="exampleInputUsername" class="form-label">Username</label>
                            <input type="text" class="form-control" asp-for="Username" />
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" asp-for="Password" />
                        </div>
                        <input class="btn btn-primary" type="submit" value="Login" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
